  "keywords": [
    "cli",
    "github-copilot",
    "agent",
    "skills",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@github/copilot-sdk": "^0.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.0",
    "simple-git": "^3.30.0",
    "tsx": "^4.7.0",
    "yaml": "^2.8.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
