{
  "name": "agentsmith",
  "version": "0.3.0",
  "description": "Assimilate any repository into a fully autonomous GitHub Copilot agent",
  "type": "module",
  "bin": {
    "agentsmith": "./bin/agentsmith.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "tsx src/main.ts",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
